+import { Command } from "commander";
+import { loadConfig, writeConfigFile } from "../config/io.js";
+import { createOpenClawCodingTools } from "../agents/pi-tools.js";
+import {
+  resolveEffectiveToolPolicy,
+  isToolAllowedByPolicies,
+  resolveGroupToolPolicy,
+  resolveSubagentToolPolicy,
+} from "../agents/pi-tools.policy.js";
+import { resolveToolProfilePolicy } from "../agents/tool-policy.js";
+import { theme } from "./theme.js";
+
+export function registerToolsCli(program: Command) {
+  const toolsCommand = program
+    .command("tools")
+    .description("Manage tools and their policies.");
+
+  toolsCommand
+    .command("status [tool-name]")
+    .description("Show the status of a specific tool or all tools.")
+    .option("-a, --agent <agent-id>", "The agent to check the status for.")
+    .action(async (toolName, options) => {
+      const config = loadConfig();
+      const allTools = createOpenClawCodingTools({ config });
+      const tools = toolName
+        ? allTools.filter((t) => t.name === toolName)
+        : allTools;
+
+      if (tools.length === 0) {
+        console.log(`Tool "${toolName}" not found.`);
+        return;
+      }
+
+      const sessionKey = options.agent ? `agent:${options.agent}` : "main";
+
+      for (const tool of tools) {
+        const {
+          agentId,
+          globalPolicy,
+          globalProviderPolicy,
+          agentPolicy,
+          agentProviderPolicy,
+          profile,
+          providerProfile,
+        } = resolveEffectiveToolPolicy({
+          config,
+          sessionKey,
+        });
+
+        const subagentPolicy = resolveSubagentToolPolicy(config);
+        const groupPolicy = resolveGroupToolPolicy({ config, sessionKey });
+        const profilePolicy = resolveToolProfilePolicy(profile);
+        const providerProfilePolicy = resolveToolProfilePolicy(providerProfile);
+
+        const policies = [
+          profilePolicy,
+          providerProfilePolicy,
+          globalPolicy,
+          globalProviderPolicy,
+          agentPolicy,
+          agentProviderPolicy,
+          groupPolicy,
+          subagentPolicy,
+        ];
+
+        const isAllowed = isToolAllowedByPolicies(tool.name, policies);
+
+        console.log(
+          `
+Tool: ${theme.bold(tool.name)} - ${
+            isAllowed
+              ? theme.success("Enabled")
+              : theme.error("Disabled")
+          }`
+        );
+
+        console.log(`Agent: ${agentId ?? "default"}`);
+
+        const logPolicy = (name: string, policy: any) => {
+          if (policy) {
+            console.log(
+              `  ${name}: allow: ${JSON.stringify(
+                policy.allow
+              )}, deny: ${JSON.stringify(policy.deny)}`
+            );
+          }
+        };
+
+        logPolicy("  Profile", profilePolicy);
+        logPolicy("  Provider Profile", providerProfilePolicy);
+        logPolicy("  Global", globalPolicy);
+        logPolicy("  Global Provider", globalProviderPolicy);
+        logPolicy("  Agent", agentPolicy);
+        logPolicy("  Agent Provider", agentProviderPolicy);
+        logPolicy("  Group", groupPolicy);
+        logPolicy("  Subagent", subagentPolicy);
+      }
+    });
+
+    toolsCommand
+    .command("enable <tool-name>")
+    .description("Enable a tool for a specific agent.")
+    .option("-a, --agent <agent-id>", "The agent to enable the tool for.", "default")
+    .action(async (toolName, options) => {
+      const config = loadConfig();
+      const agentId = options.agent;
+
+      if (!config.agents) {
+        config.agents = { list: [] };
+      }
+      if (!config.agents.list) {
+        config.agents.list = [];
+      }
+
+      let agent = config.agents.list.find((a) => a.id === agentId);
+      if (!agent) {
+        agent = { id: agentId };
+        config.agents.list.push(agent);
+      }
+
+      if (!agent.tools || typeof agent.tools !== "object") {
+        agent.tools = {};
+      }
+
+      // Add to alsoAllow
+      if (!agent.tools.alsoAllow) {
+        agent.tools.alsoAllow = [];
+      }
+      if (!agent.tools.alsoAllow.includes(toolName)) {
+        agent.tools.alsoAllow.push(toolName);
+      }
+
+      // Remove from deny
+      if (agent.tools.deny) {
+        agent.tools.deny = agent.tools.deny.filter((t) => t !== toolName);
+      }
+
+      writeConfigFile(config);
+      console.log(
+        `Tool ${theme.bold(toolName)} enabled for agent ${theme.bold(agentId)}.`
+      );
+    });
+
+    toolsCommand
+    .command("disable <tool-name>")
+    .description("Disable a tool for a specific agent.")
+    .option("-a, --agent <agent-id>", "The agent to disable the tool for.", "default")
+    .action(async (toolName, options) => {
+      const config = loadConfig();
+      const agentId = options.agent;
+
+      if (!config.agents) {
+        config.agents = { list: [] };
+      }
+      if (!config.agents.list) {
+        config.agents.list = [];
+      }
+
+      let agent = config.agents.list.find((a) => a.id === agentId);
+      if (!agent) {
+        agent = { id: agentId };
+        config.agents.list.push(agent);
+      }
+
+      if (!agent.tools || typeof agent.tools !== "object") {
+        agent.tools = {};
+      }
+
+      // Add to deny
+      if (!agent.tools.deny) {
+        agent.tools.deny = [];
+      }
+      if (!agent.tools.deny.includes(toolName)) {
+        agent.tools.deny.push(toolName);
+      }
+
+      // Remove from alsoAllow
+      if (agent.tools.alsoAllow) {
+        agent.tools.alsoAllow = agent.tools.alsoAllow.filter(
+          (t) => t !== toolName
+        );
+      }
+      
+      // Remove from allow
+      if (agent.tools.allow) {
+        agent.tools.allow = agent.tools.allow.filter(
+          (t) => t !== toolName
+        );
+      }
+
+      writeConfigFile(config);
+      console.log(
+        `Tool ${theme.bold(toolName)} disabled for agent ${theme.bold(
+          agentId
+        )}.`
+      );
+    });
+
+  toolsCommand.command("list").description("List all available tools.").action(() => {
+    const config = loadConfig();
+    const allTools = createOpenClawCodingTools({ config });
+    console.log("Available tools:");
+    for (const tool of allTools) {
+      console.log(`- ${tool.name}`);
+    }
+  });
+}
